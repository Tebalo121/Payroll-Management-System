<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.payrollsystemmanagement.AdminDashboardController">

    <!-- Top Header -->
    <top>
        <HBox spacing="20" styleClass="header">
            <Label text="Admin Dashboard" styleClass="header-title"/>
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="welcomeLabel" styleClass="welcome-label"/>
                <Button text="Logout" onAction="#handleLogout" styleClass="logout-btn"/>
            </HBox>
        </HBox>
    </top>

    <!-- Left Navigation -->
    <left>
        <FlowPane orientation="VERTICAL" vgap="12" hgap="0" styleClass="sidebar" prefWidth="220">
            <Button styleClass="nav-btn" text="🏠  Home" onAction="#showHome"/>
            <Button styleClass="nav-btn" text="👥  Employee Management" onAction="#showEmployeeManagement"/>
            <Button styleClass="nav-btn" text="🧮  Salary Calculation" onAction="#showSalaryCalculation"/>
            <Button styleClass="nav-btn" text="🧾  Payslip Generator" onAction="#showPayslipGenerator"/>
            <Button styleClass="nav-btn" text="📈  Payroll Reports" onAction="#showReports"/>
        </FlowPane>
    </left>

    <!-- Main Content -->
    <center>
        <StackPane fx:id="contentPane">
            <!-- Default Home Content -->
            <VBox fx:id="homeContent" spacing="20" styleClass="dashboard-content">
                <Text text="Welcome to Admin Home" styleClass="title"/>

                <HBox spacing="20">
                    <!-- Home Summary Cards -->
                    <VBox styleClass="summary-card">
                        <Label text="Total Users" styleClass="card-title"/>
                        <Label fx:id="totalUsersLabel" text="0" styleClass="card-value"/>
                    </VBox>

                    <VBox styleClass="summary-card">
                        <Label text="Pending Requests" styleClass="card-title"/>
                        <Label fx:id="pendingRequestsLabel" text="0" styleClass="card-value"/>
                    </VBox>
                </HBox>

                <TableView fx:id="homeActivityTable" styleClass="admin-table">
                    <columns>
                        <TableColumn fx:id="activityColumn" text="Recent Activity" prefWidth="600"/>
                    </columns>
                </TableView>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
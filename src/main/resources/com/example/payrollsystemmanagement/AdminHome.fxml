<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="400" prefWidth="600" spacing="20" styleClass="dashboard-content" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.payrollsystemmanagement.AdminHomeDashboardController">

    <!-- Title -->
    <Text styleClass="title" text="Welcome to Admin Home" wrappingWidth="141.537109375">
      <font>
         <Font size="24.0" />
      </font></Text>

    <!-- Summary Cards -->
    <HBox alignment="CENTER" spacing="20">

        <VBox alignment="CENTER" prefHeight="100" prefWidth="200" styleClass="summary-card">
            <Label fx:id="pendingRequestsLabel" styleClass="card-value" text="0" />
        </VBox>
    </HBox>

    <!-- Recent Activity Table -->
    <TableView fx:id="homeActivityTable" prefHeight="200" prefWidth="600" styleClass="admin-table">
        <columns>
            <TableColumn fx:id="activityColumn" prefWidth="600" text="Recent Activity" />
        </columns>
    </TableView>

</VBox>

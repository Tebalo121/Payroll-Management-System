<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.payrollsystemmanagement.EmployeeDialogController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <TextField fx:id="idField" promptText="Employee ID" />
    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="depField" promptText="Department" />
    <TextField fx:id="posField" promptText="Position" />
    <TextField fx:id="salaryField" promptText="Salary" />
    <TextField fx:id="hoursField" promptText="Working Hours" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save" onAction="#handleSave" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>
</VBox>